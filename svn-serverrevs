#!/bin/bash

printUsage()
{
    cat <<HELPTEXT
Internal helper script.
Usage: "$(basename "$1")"
HELPTEXT
}

case "$1" in
    --help|-h|-\?)	shift; printUsage "$0"; exit 0;;
esac

set -o pipefail
repositoryUrl=$(svn info --non-interactive "$@" | sed -n -e 's/^URL: \(.*\)$/\1/p') || exit $?
wcRevision=$(svn info --non-interactive "$@" | sed -n -e 's/^Revision: \(.*\)$/\1/p') || exit $?

echo "-r HEAD:$((wcRevision + 1)) $repositoryUrl"
